<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".aipitching_performance">


    <ImageView
        android:id="@+id/aipitching_simulation_imageview1"
        android:layout_width="193dp"
        android:layout_height="267dp"
        android:layout_below="@+id/aipitching_performanceanalysis_text1"
        android:layout_alignParentStart="true"
        android:layout_alignParentEnd="true"
        android:layout_marginStart="121dp"
        android:layout_marginTop="11dp"
        android:layout_marginEnd="98dp"
        android:background="@drawable/aipitching_man">

    </ImageView>

    <Button
        android:id="@+id/feedbackbutton1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentStart="true"
        android:layout_marginStart="29dp"
        android:layout_marginEnd="31dp"
        android:layout_marginBottom="5dp"
        android:layout_toStartOf="@+id/btnRecord"
        android:backgroundTint="#0A49C3"
        android:text="Receive Feedback" />

    <ImageView
        android:id="@+id/aipitching_performanceanalysis_imageView2"
        android:layout_width="wrap_content"
        android:layout_height="262dp"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginStart="21dp"
        android:layout_marginTop="333dp"
        android:layout_marginEnd="27dp"
        android:layout_marginBottom="136dp"
        android:background="@drawable/aipitching_performanceanalysis_bluebox"
        app:layout_constraintHorizontal_bias="0.468"
        app:layout_constraintStart_toStartOf="parent" />

    <ScrollView
        android:id="@+id/scrollViewTranscript"
        android:layout_width="wrap_content"
        android:layout_height="205dp"
        android:layout_alignStart="@+id/aipitching_performanceanalysis_imageView2"
        android:layout_alignTop="@+id/aipitching_performanceanalysis_imageView2"
        android:layout_alignEnd="@+id/aipitching_performanceanalysis_imageView2"
        android:layout_alignBottom="@+id/aipitching_performanceanalysis_imageView2"
        android:layout_marginStart="9dp"
        android:layout_marginTop="41dp"
        android:layout_marginEnd="10dp"
        android:layout_marginBottom="16dp"
        android:clipChildren="false"
        android:clipToPadding="false">

        <TextView
            android:id="@+id/tvTranscript"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="8dp"
            android:text=""
            android:textSize="16sp" />
    </ScrollView>

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottomNavigationView"
        android:layout_width="match_parent"
        android:layout_height="70dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentBottom="true"
        android:layout_marginEnd="0dp"
        android:layout_marginBottom="2dp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_vertical"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/nav_1"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/book_icon" />

            <ImageView
                android:id="@+id/nav_2"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/chart_icon" />

            <ImageView
                android:id="@+id/nav_3"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/aipitching_icon" />

            <ImageView
                android:id="@+id/nav_4"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_weight="1"
                android:src="@drawable/profile_icon" />

        </LinearLayout>
    </com.google.android.material.bottomnavigation.BottomNavigationView>


    <TextView
        android:id="@+id/aipitching_performanceanalysis_text2"
        android:layout_width="125dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="false"
        android:layout_alignParentBottom="false"
        android:layout_marginStart="36dp"
        android:layout_marginTop="347dp"
        android:text="Transcription"
        android:textSize="16dp"
        android:textStyle="bold" />

    <ImageButton
        android:id="@+id/aipitching_performanceanalysis_backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:layout_marginStart="13dp"
        android:layout_marginTop="19dp"
        android:background="#00000000"
        android:src="@drawable/aipitching_left_icon" />

    <TextView
        android:id="@+id/aipitching_performanceanalysis_text1"
        android:layout_width="143dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginStart="119dp"
        android:layout_marginTop="23dp"
        android:layout_toEndOf="@id/aipitching_performanceanalysis_backbutton"
        android:text="Performance"
        android:textSize="18dp"
        android:textStyle="bold" />

    <Button
        android:id="@+id/btnRecord"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_above="@+id/bottomNavigationView"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="41dp"
        android:layout_marginBottom="5dp"
        android:backgroundTint="#0A49C3"
        android:text="Start Recording" />

</RelativeLayout>