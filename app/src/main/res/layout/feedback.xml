<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp"
    tools:context=".Pitching"
    android:background="#E1FBFF">

    <ImageButton
        android:id="@+id/aipitching_feedback_backbutton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:background="#00000000"
        android:src="@drawable/aipitching_left_icon" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_marginTop="16dp"> <!-- Add margin to the top for more spacing -->

        <Button
            android:id="@+id/button_upload_text"
            android:layout_width="165dp"
            android:layout_height="wrap_content"
            android:background="#0A49C3"
            android:text="Upload .txt File"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:layout_marginEnd="16dp" />

        <Button
            android:id="@+id/button_upload_rubric"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="#0A49C3"
            android:text="Upload Rubric File"
            android:textColor="#FFFFFF"
            android:padding="12dp" />

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:layout_marginTop="16dp"
        android:layout_weight="1">

        <TextView
            android:id="@+id/textView_feedback"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:scrollbars="vertical"
            android:text="Feedback will appear here"
            android:textSize="16sp" />
    </ScrollView>



</LinearLayout>
